<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SpaceShooter" parent="Theme.Material3.DayNight.NoActionBar">
        <!--primary brand color -->
       <item name="colorPrimary"></item>
        <item name="colorPrimaryVariant"></item>
        <item name="colorOnPrimary">@color/white</item>
        <!--secondary brand color -->
        <item name="colorSecondary"></item>
        <item name="colorSecondaryVariant"></item>
        <item name="colorOnSecondary">@color/black</item>
        <!--status bar  color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SpaceShooter" parent="Base.Theme.SpaceShooter" />

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>